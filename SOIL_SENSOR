int soil_sensor = 12;
int BUZZER = 6;
void setup() {
  pinMode(soil_sensor, INPUT);
  pinMode(BUZZER, OUTPUT);
  Serial.begin(9600);
}
void loop() {
  int SM_value = analogRead(soil_sensor);
  if (SM_value < 500) {
    digitalWrite(BUZZER, HIGH);

  } else {
    digitalWrite(BUZZER, LOW);
  }
Serial.println(SM_value);
  delay(1000);
}
